<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mercury"
    android:gravity="top"
    android:showDividers="middle"
    android:divider="@drawable/vertical_divider_15"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/book_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="О книге"
            android:textColor="@color/woodsmoke"
            android:textSize="30sp"
            android:fontFamily="@font/pt_serif_bold"
            android:gravity="bottom"
            />
    </LinearLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        >

        <LinearLayout
            android:id="@+id/loaded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="horizontal"
                android:background="@color/white"
                android:showDividers="middle"
                android:divider="@drawable/vertical_divider_15"
                android:paddingTop="15dp"
                android:paddingBottom="5dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="7dp"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_gravity="start"
                        >

                        <ImageView
                            android:id="@+id/cover"
                            android:layout_width="192dp"
                            android:layout_height="296dp"
                            android:layout_gravity="center"
                            android:background="@drawable/border_book"
                            android:contentDescription="@string/image_of_book_on_hands"
                            android:scaleType="fitStart"
                            />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="20dp"
                    >
                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Название"
                        android:textColor="@color/woodsmoke"
                        android:textSize="20sp"
                        android:fontFamily="@font/pt_serif_bold"
                        android:breakStrategy="simple"
                        />
                    <TextView
                        android:id="@+id/author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Автор"
                        android:textColor="@color/santas_gray"
                        android:textSize="16sp"
                        android:fontFamily="@font/roboto"
                        android:breakStrategy="simple"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:showDividers="middle"
                        android:divider="@drawable/vertical_divider_15"
                        android:background="@color/white"
                        android:paddingTop="15dp"
                        >
                        <android.widget.Button
                            android:id="@+id/wishlist_button"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:textAllCaps="false"
                            android:fontFamily="@font/roboto"
                            android:text="@string/add_to_wishlist"
                            android:textSize="16sp"
                            android:background="@drawable/ic_search_button"
                            android:paddingHorizontal="10dp"
                            />
                        <android.widget.Button
                            android:id="@+id/second_button"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:textAllCaps="false"
                            android:fontFamily="@font/roboto"
                            android:text="@string/to_book"
                            android:textSize="16sp"
                            android:background="@drawable/ic_search_button"
                            android:paddingHorizontal="10dp"
                            />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingHorizontal="20dp"
                android:background="@color/white"
                android:paddingBottom="10dp"
                >
                <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Описание"
                    android:textColor="@color/santas_gray"
                    android:textSize="18sp"
                    android:fontFamily="@font/roboto"
                    />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/loading"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            android:background="@color/white"
            android:paddingVertical="15dp"
            android:visibility="visible"
            >
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
</LinearLayout>